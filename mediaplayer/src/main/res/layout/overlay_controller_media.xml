<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/customPlayBackControlView"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_controller"
        app:contentInsetStartWithNavigation="0dp"
        android:background="@color/colorGrayTransparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_weight="1"
                android:textColor="@color/colorWhite"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Stream Media"/>
            <ImageView
                android:id="@+id/hd_media"
                android:visibility="gone"
                android:layout_marginHorizontal="5dp"
                android:background="@null"
                android:src="@drawable/ic_hd"
                android:layout_width="24dp"
                android:layout_height="24dp"/>
            <ImageView
                android:id="@+id/btn_share"
                android:visibility="gone"
                android:layout_marginHorizontal="5dp"
                android:background="@null"
                android:src="@drawable/ic_share"
                android:layout_width="24dp"
                android:layout_height="24dp"/>

            <ImageView
                android:id="@+id/btn_option"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:src="@drawable/ic_baseline_more_vert_24" />

        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <ImageButton
            android:id="@+id/btn_rotate"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@drawable/ic_baseline_screen_rotation_24"
            android:background="@drawable/bg_circle_gray"/>
        <ImageButton
            android:id="@+id/btn_unlock"
            android:visibility="gone"
            android:layout_marginStart="10dp"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_circle_gray"
            android:src="@drawable/ic_baseline_lock_24"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/container_control_media"
        android:visibility="visible"
        android:background="@color/colorGrayTransparent"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@id/exo_position"
                android:layout_marginHorizontal="5dp"
                android:textColor="@color/colorWhite"
                android:layout_margin="8dp"
                android:includeFontPadding="false"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6:00"/>
            <com.google.android.exoplayer2.ui.DefaultTimeBar
                android:id="@+id/exo_progress"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:scrubber_dragged_size="24dp"
                app:scrubber_enabled_size="16dp"/>
            <TextView
                android:id="@id/exo_duration"
                android:layout_marginHorizontal="5dp"
                android:includeFontPadding="false"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6:00"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/btn_lock"
                android:layout_weight="1"
                android:background="?selectableItemBackground"
                android:src="@drawable/ic_baseline_lock_24"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
            <ImageButton
                android:id="@id/exo_rew"
                android:background="?selectableItemBackground"
                android:layout_weight="1"
                style="@style/ExoMediaButton.Rewind"
                android:layout_width="50dp"
                android:layout_height="50dp">

            </ImageButton>
            <ImageButton
                android:id="@id/exo_play"
                android:background="?selectableItemBackground"
                android:layout_weight="1"
                style="@style/ExoMediaButton.Play"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
            <ImageButton
                android:id="@id/exo_pause"
                android:layout_weight="1"
                style="@style/ExoMediaButton.Pause"
                android:layout_width="50dp"
                android:layout_height="50dp"/>

            <ImageButton
                android:id="@id/exo_ffwd"
                android:background="?selectableItemBackground"
                android:layout_weight="1"
                style="@style/ExoMediaButton.FastForward"
                android:layout_width="50dp"
                android:layout_height="50dp"/>

            <ImageButton
                android:visibility="visible"
                android:background="?selectableItemBackground"
                android:id="@+id/btn_scale"
                android:layout_weight="1"
                android:src="@drawable/ic_baseline_fullscreen_24"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>